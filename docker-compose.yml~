version: '3.3'
services:
    mongo:
        ports:
            - '27017:27017'
        container_name: dkrcomp-mongo
        restart: "unless-stopped"
        logging:
            options:
                max-size: 1g
        environment:
            - MONGO_INITDB_ROOT_USERNAME=mongoadmin
            - MONGO_INITDB_ROOT_PASSWORD=turbit!
        image: mongo
        volumes:
            - "${PWD}/database:/data/db"
            - "${PWD}/api:/var/fakeapi"

